<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_user_profile"
        android:background="#69AED9"
        android:orientation="vertical"
        tools:context="com.example.jose.soteria.UserProfile"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="35dp"
            android:text="p r o f i l e"
            android:id="@+id/textView2"
            android:textColor="#152E3D"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="174dp"
                android:layout_height="166dp"
                android:text="Photo Here"
                android:id="@+id/button6" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="First and Last Name"
                    android:paddingLeft="5dp"
                    android:id="@+id/textView11"
                    android:paddingTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Birthdate"
                    android:id="@+id/textView12"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address"
                    android:id="@+id/textView16"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Phone Number"
                    android:id="@+id/textView13"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Email Address"
                    android:id="@+id/textView14"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Physical Description Information"
            android:id="@+id/textView15"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Emergency Contact Information"
            android:id="@+id/textView6"
            android:paddingTop="5dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="0.02" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms &amp; Conditions"
            android:id="@+id/checkBox2"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" Edit Information "
                android:id="@+id/button7"
                android:background="#152E3D"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="65dp"
                android:layout_height="35dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=" Create Profile > "
                android:id="@+id/button8"
                android:textColor="#FFFFFF"
                android:background="#E81744"
                android:onClick="dooSomething"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
