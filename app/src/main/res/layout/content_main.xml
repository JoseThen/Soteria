<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    android:background="#69AED9"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.21" />

    <TextView
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:text="s o t e r i a"
        android:id="@+id/textView"
        android:textColor="#152E3D"
        android:textSize="70dp"
        android:typeface="sans" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Be Safe"
            android:id="@+id/button"
            android:background="#E81744"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.03"
            android:onClick="doSomething"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="soteria is an application that alerts local authorities, close family members, and friends in the event of an emergency"
        android:id="@+id/textView18"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />


</LinearLayout>
